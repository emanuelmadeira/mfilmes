<!-- app/views/layouts/_navbar.html.erb -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <%= link_to "mFilmes", root_path, class: "navbar-brand" %>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= link_to "Filmes", filmes_path, class: "nav-link" %>
        </li>
      </ul>
      
      <ul class="navbar-nav">
        <% if logged_in? %>
          <!-- Usuário logado -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              <%= current_user.name %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Minha Conta", profile_path, class: "dropdown-item" %></li>
              <li><%= link_to "Editar Perfil", edit_user_path(current_user), class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Sair", logout_path, method: :delete, class: "dropdown-item" %></li>
            </ul>
          </li>
        <% else %>
          <!-- Usuário deslogado -->
          <li class="nav-item">
            <%= link_to "Entrar", login_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Cadastrar", signup_path, class: "nav-link btn btn-outline-primary ms-2" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>