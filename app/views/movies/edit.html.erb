<!-- app/views/movies/edit.html.erb -->
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card bg-dark text-white border-success">
        <div class="card-header bg-success text-dark">
          <h2 class="text-center mb-0">‚úèÔ∏è Editar Filme</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @movie, local: true do |form| %>
            <% if @movie.errors.any? %>
              <div class="alert alert-danger">
                <h5>Corrija os seguintes erros:</h5>
                <ul class="mb-0">
                  <% @movie.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :title, "T√≠tulo do Filme", class: "form-label text-success fw-semibold" %>
              <%= form.text_field :title, class: "form-control bg-black text-white border-success", required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :genre, "G√™nero", class: "form-label text-success fw-semibold" %>
              <%= form.text_field :genre, class: "form-control bg-black text-white border-success" %>
            </div>

            <div class="mb-3">
              <%= form.label :release_year, "Ano de Lan√ßamento", class: "form-label text-success fw-semibold" %>
              <%= form.number_field :release_year, class: "form-control bg-black text-white border-success", min: "1900", max: "2024" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, "Descri√ß√£o", class: "form-label text-success fw-semibold" %>
              <%= form.text_area :description, class: "form-control bg-black text-white border-success", rows: 4 %>
            </div>

            <!-- Campo de Imagem -->
            <div class="mb-3">
              <%= form.label :image, "Capa do Filme", class: "form-label text-success fw-semibold" %>
              
              <% if @movie.image.attached? %>
                <div class="mb-2">
                  <p class="text-success">Imagem atual:</p>
                  <%= image_tag @movie.image, class: "img-thumbnail", style: "max-height: 150px;", alt: @movie.title %>
                </div>
              <% end %>
              
              <%= form.file_field :image, class: "form-control bg-black text-white border-success", accept: "image/*" %>
              <small class="form-text text-muted">Deixe em branco para manter a imagem atual</small>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "üíæ Atualizar Filme", class: "btn btn-success" %>
              <%= link_to "‚ùå Cancelar", movies_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>