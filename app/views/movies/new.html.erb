<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card bg-dark text-white border-success">
        <div class="card-header bg-success text-dark">
          <h2 class="text-center mb-0">🎬 Adicionar Novo Filme</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @movie, local: true do |form| %>
            <% if @movie.errors.any? %>
              <div class="alert alert-danger">
                <h5>Corrija os seguintes erros:</h5>
                <ul class="mb-0">
                  <% @movie.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :title, "Título do Filme", class: "form-label text-success fw-semibold" %>
              <%= form.text_field :title, class: "form-control bg-black text-white border-success", required: true, placeholder: "Ex: O Poderoso Chefão" %>
            </div>

            <div class="mb-3">
              <%= form.label :genre, "Gênero", class: "form-label text-success fw-semibold" %>
              <%= form.text_field :genre, class: "form-control bg-black text-white border-success", placeholder: "Ex: Drama, Ação, Comédia" %>
            </div>

            <div class="mb-3">
              <%= form.label :release_year, "Ano de Lançamento", class: "form-label text-success fw-semibold" %>
              <%= form.number_field :release_year, class: "form-control bg-black text-white border-success", min: "1900", max: "2024", placeholder: "Ex: 1994" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, "Descrição", class: "form-label text-success fw-semibold" %>
              <%= form.text_area :description, class: "form-control bg-black text-white border-success", rows: 4, placeholder: "Descreva o filme..." %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "🎬 Adicionar Filme", class: "btn btn-success btn-lg" %>
              <%= link_to "↩️ Cancelar", movies_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>