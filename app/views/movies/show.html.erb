<!-- app/views/movies/show.html.erb -->
<div class="container mt-4">
  <div class="row">
    <!-- Detalhes do Filme - Lado Esquerdo no Desktop, Topo no Mobile -->
    <div class="col-12 col-lg-8 mb-4">
      <div class="card bg-dark text-white border-success">
        <div class="card-header bg-success text-dark d-flex justify-content-between align-items-center">
          <h3 class="mb-0 fs-4"><%= @movie.title %></h3>
          <span class="badge bg-dark fs-6"><%= @movie.release_year %></span>
        </div>
        
        <% if @movie.image.attached? %>
          <div class="text-center p-2 p-lg-3">
            <%= image_tag @movie.image, class: "img-fluid rounded", style: "max-height: 300px;", alt: @movie.title %>
          </div>
        <% end %>
        
        <div class="card-body">
          <div class="row">
            <div class="col-12 col-sm-6 mb-2">
              <p class="mb-2">
                <strong class="text-success">G√™nero:</strong><br>
                <span class="text-light"><%= @movie.genre || "N√£o especificado" %></span>
              </p>
              <p class="mb-2">
                <strong class="text-success">Diretor:</strong><br>
                <span class="text-light"><%= @movie.diretor || "N√£o informado" %></span>
              </p>
            </div>
            <div class="col-12 col-sm-6 mb-2">
              <p class="mb-2">
                <strong class="text-success">Dura√ß√£o:</strong><br>
                <span class="text-light"><%= @movie.duracao || "N√£o informada" %></span>
              </p>
              <p class="mb-2">
                <strong class="text-success">Adicionado por:</strong><br>
                <span class="text-warning"><%= @movie.user.name %></span>
              </p>
            </div>
          </div>
          
          <% if @movie.description.present? %>
            <div class="mt-3">
              <strong class="text-success">Descri√ß√£o:</strong>
              <p class="mt-2 text-light"><%= @movie.description %></p>
            </div>
          <% end %>
          
          <div class="mt-3">
            <small class="text-muted">
              Adicionado em: <%= @movie.created_at.strftime("%d/%m/%Y √†s %H:%M") %>
            </small>
          </div>
        </div>
        <div class="card-footer">
          <div class="d-flex flex-wrap gap-2">
            <%= link_to "‚Ü©Ô∏è Voltar", movies_path, class: "btn btn-secondary btn-sm" %>
            <% if logged_in? && current_user == @movie.user %>
              <%= link_to "‚úèÔ∏è Editar", edit_movie_path(@movie), class: "btn btn-warning btn-sm" %>
              <%= button_to "üóëÔ∏è Excluir", movie_path(@movie), method: :delete, 
                  class: "btn btn-danger btn-sm",
                  data: { confirm: "Tem certeza que deseja excluir #{@movie.title}?" } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Se√ß√£o de Coment√°rios - Lado Direito no Desktop, Abaixo no Mobile -->
    <div class="col-12 col-lg-4">
      <div class="card bg-dark text-white border-success">
        <div class="card-header bg-success text-dark">
          <h5 class="mb-0 fs-5">üí¨ Coment√°rios (<%= @movie.comentarios_count %>)</h5>
        </div>
        
        <div class="card-body" style="max-height: 500px; overflow-y: auto;">
          <!-- Formul√°rio de Novo Coment√°rio -->
          <div class="mb-4">
            <%= form_with model: Comentario.new, url: movie_comentarios_path(@movie), local: true do |form| %>
              <% if logged_in? %>
                <!-- Usu√°rio logado - mostra nome automaticamente -->
                <div class="alert alert-info mb-3 py-2">
                  <small class="mb-0">Comentando como: <strong><%= current_user.name %></strong></small>
                </div>
                <%= form.hidden_field :author_name, value: current_user.name %>
              <% else %>
                <!-- Usu√°rio an√¥nimo - campo para nome -->
                <div class="mb-3">
                  <%= form.label :author_name, "Seu nome", class: "form-label text-success fw-semibold" %>
                  <%= form.text_field :author_name, 
                      class: "form-control bg-black text-white border-success", 
                      required: true, 
                      placeholder: "Digite seu nome",
                      maxlength: 50 %>
                </div>
              <% end %>
              
              <div class="mb-3">
                <%= form.label :conteudo, "Seu coment√°rio", class: "form-label text-success fw-semibold" %>
                <%= form.text_area :conteudo, 
                    class: "form-control bg-black text-white border-success", 
                    rows: 3, 
                    placeholder: "Digite seu coment√°rio...", 
                    required: true,
                    maxlength: 1000 %>
                <small class="form-text text-muted">M√°ximo: 1000 caracteres</small>
              </div>
              
              <div class="d-grid">
                <%= form.submit "üí¨ Comentar", class: "btn btn-success btn-sm" %>
              </div>
            <% end %>
          </div>
          
          <!-- Lista de Coment√°rios -->
          <% if @movie.comentarios_count > 0 %>
            <div class="comentarios-list">
              <% @movie.comentarios.each do |comentario| %>
                <div class="comentario-item border-bottom border-secondary pb-3 mb-3">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="me-2">
                      <strong class="text-warning d-block">
                        <%= comentario.author_display_name %>
                        <% if comentario.anonymous? %>
                          <small class="text-muted">(Visitante)</small>
                        <% else %>
                          <small class="text-muted">(Usu√°rio)</small>
                        <% end %>
                      </strong>
                      <small class="text-muted"><%= time_ago_in_words(comentario.created_at) %> atr√°s</small>
                    </div>
                    <% if logged_in? && (current_user.id == comentario.user_id || current_user.id == @movie.user_id) %>
                      <%= button_to "üóëÔ∏è", movie_comentario_path(@movie, comentario), 
                          method: :delete, 
                          class: "btn btn-outline-danger btn-sm",
                          data: { confirm: "Tem certeza que deseja excluir este coment√°rio?" },
                          form: { class: "d-inline" } %>
                    <% end %>
                  </div>
                  <p class="mb-0 text-light"><%= comentario.conteudo %></p>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-muted py-4">
              <p class="mb-1">Nenhum coment√°rio ainda.</p>
              <p class="small mb-0">Seja o primeiro a comentar!</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>