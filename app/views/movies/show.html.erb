<!-- app/views/movies/show.html.erb -->
<div class="container mt-4">
  <div class="row">
    <!-- Detalhes do Filme -->
    <div class="col-md-8">
      <div class="card bg-dark text-white border-success mb-4">
        <div class="card-header bg-success text-dark d-flex justify-content-between align-items-center">
          <h3 class="mb-0"><%= @movie.title %></h3>
          <span class="badge bg-dark fs-6"><%= @movie.release_year %></span>
        </div>
        
        <!-- Imagem do Filme -->
        <% if @movie.image.attached? %>
          <div class="text-center p-3">
            <%= image_tag @movie.image, class: "img-fluid rounded", style: "max-height: 400px;", alt: @movie.title %>
          </div>
        <% end %>
        
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p><strong class="text-success">Gênero:</strong> <%= @movie.genre || "Não especificado" %></p>
            </div>
            <div class="col-md-6">
              <p><strong class="text-success">Adicionado por:</strong> <span class="text-warning"><%= @movie.user.name %></span></p>
            </div>
          </div>
          
          <% if @movie.description.present? %>
            <div class="mt-3">
              <strong class="text-success">Descrição:</strong>
              <p class="mt-2"><%= @movie.description %></p>
            </div>
          <% end %>
          
          <div class="mt-4">
            <small class="text-muted">
              Adicionado em: <%= @movie.created_at.strftime("%d/%m/%Y às %H:%M") %>
            </small>
          </div>
        </div>
        <div class="card-footer">
          <div class="d-flex gap-2">
            <%= link_to "↩️ Voltar", movies_path, class: "btn btn-secondary" %>
            <% if logged_in? && current_user == @movie.user %>
              <%= link_to "✏️ Editar", edit_movie_path(@movie), class: "btn btn-warning" %>
              <%= button_to "🗑️ Excluir", movie_path(@movie), method: :delete, 
                  class: "btn btn-danger",
                  data: { confirm: "Tem certeza que deseja excluir #{@movie.title}?" } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Seção de Comentários -->
    <div class="col-md-4">
      <div class="card bg-dark text-white border-success">
        <div class="card-header bg-success text-dark">
          <h5 class="mb-0">💬 Comentários (<%= @movie.comentarios_count %>)</h5>
        </div>
        
        <div class="card-body" style="max-height: 400px; overflow-y: auto;">
          <!-- Formulário de Novo Comentário -->
          <% if logged_in? %>
            <div class="mb-4">
              <%= form_with model: Comentario.new, url: movie_comentarios_path(@movie), local: true do |form| %>
                <div class="mb-3">
                  <%= form.label :conteudo, "Adicionar comentário", class: "form-label text-success fw-semibold" %>
                  <%= form.text_area :conteudo, class: "form-control bg-black text-white border-success", rows: 3, placeholder: "Digite seu comentário...", required: true %>
                </div>
                <div class="d-grid">
                  <%= form.submit "💬 Comentar", class: "btn btn-success btn-sm" %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="alert alert-info">
              <small>
                <%= link_to "Faça login", login_path %> para comentar neste filme.
              </small>
            </div>
          <% end %>
          
          <!-- Lista de Comentários -->
          <% if @movie.comentarios_count > 0 %>
            <div class="comentarios-list">
              <% @movie.comentarios.each do |comentario| %>
                <div class="comentario-item border-bottom border-secondary pb-3 mb-3">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                      <strong class="text-warning"><%= comentario.user.name %></strong>
                      <small class="text-muted ms-2"><%= time_ago_in_words(comentario.created_at) %> atrás</small>
                    </div>
                    <% if logged_in? && current_user.id == comentario.user_id %>
                      <%= button_to "🗑️", movie_comentario_path(@movie, comentario), 
                          method: :delete, 
                          class: "btn btn-outline-danger btn-sm",
                          data: { confirm: "Tem certeza que deseja excluir este comentário?" },
                          form: { class: "d-inline" } %>
                    <% end %>
                  </div>
                  <p class="mb-0 text-light"><%= comentario.conteudo %></p>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-muted py-4">
              <p>Nenhum comentário ainda.</p>
              <p class="small">Seja o primeiro a comentar!</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>